{
	"appId": "com.gesttrack",
	"productName": "gesttrack",
	"files": ["dist-electron", "dist-react"],
	"extraResources": ["dist-electron/preload.cjs", "src/assets/**"],
	"icon": "appIcon.png",
	"asar": true,
	"extraFiles": [".env"],
	"mac": {
		"target": "dmg"
	},
	"linux": {
		"target": "AppImage",
		"category": "Utility"
	},
	"win": {
		"target": ["nsis"]
	},
	"nsis": { "include": "build/installer.nsh" }
}
